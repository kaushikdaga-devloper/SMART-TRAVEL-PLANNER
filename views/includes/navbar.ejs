<style>
  .btn-search {
    background-color: #fe424d !important;
    border: none !important;
    color: #ebebeb !important;
    border-radius: 25px;
  }
  .btn-search:hover {
    background-color: green !important;
    color: white !important;
  }

  /* Search form: flex container, fluid on xs, capped & centered on md+ */
  .search-form {
    display: flex;
    flex: 1 1 auto;       /* grow & shrink */
    max-width: 250px;      /* cap width on tablets/desktops */
    width: 100%;
  }
  @media (min-width: 768px) {
    .search-form {
      flex: 0 0 auto;     /* fixed width on md+ */
      margin: 0 auto;     /* center on md+ */
    }
  }

  /* Search input: fill & shrink */
  .search-inp {
    flex: 1 1 auto;
    margin-left: 1rem;
    min-width: 0;
    width: 20rem;
    border-radius: 25px;
  }
</style>

<nav class="navbar navbar-expand-md bg-body-light border-bottom sticky-top">
  <div class="container-fluid d-flex align-items-center">
    <!-- 1) Logo -->
    <a class="navbar-brand order-1" href="/listings">
      <i class="fa-solid fa-compass fa-lg"></i>
    </a>

    <!-- 2) Explore on left (visible md+) -->
    <a
      class="nav-link d-none d-md-block order-2 ms-3"
      href="/listings"
    >Explore</a>

    <!-- 3) Search form -->
    <form
      class="search-form order-3"
      role="search"
      action="/listings/search"
      method="GET"
    >
      <input
        class="form-control me-2 search-inp"
        type="search"
        name="query"
        placeholder="Search Places"
        aria-label="Search"
        required
      />
      <button class="btn btn-search" type="submit">Search</button>
    </form>

    <!-- 4) Hamburger toggler -->
    <button
      class="navbar-toggler order-4 ms-auto"
      type="button"
      data-bs-toggle="collapse"
      data-bs-target="#navbarSupportedContent"
      aria-controls="navbarSupportedContent"
      aria-expanded="false"
      aria-label="Toggle navigation"
    >
      <span class="navbar-toggler-icon"></span>
    </button>

    <!-- 5) Collapsed nav links -->
    <div class="collapse navbar-collapse order-5 bg-white" id="navbarSupportedContent">
      <ul class="navbar-nav ms-auto mb-2 mb-md-0">
        <!-- mobile-only Explore -->
        <li class="nav-item d-md-none">
          <a class="nav-link" href="/listings">Explore</a>
        </li>
        <li class="nav-item">
          <a class="nav-link" href="/listings/new">Add new Listing</a>
        </li>
        <% if (!curUser) { %>
          <li class="nav-item">
            <a class="nav-link" href="/signup"><b>SignUp</b></a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/login"><b>Login</b></a>
          </li>
        <% } else { %>
          <li class="nav-item">
            <a class="nav-link" href="/logout"><b>Logout</b></a>
          </li>
        <% } %>
      </ul>
    </div>
  </div>
</nav>
